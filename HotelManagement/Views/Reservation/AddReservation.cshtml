            @Html.TextBoxFor(model => model.guestName, new { @class = "form-control", placeholder = "Enter guest name", required = "required" })

            <label for="checkInDate">Check-in Date</label>
            @Html.TextBoxFor(model => model.checkInDate, new { @class = "form-control", type = "date", placeholder = "Select check-in date", required = "required" })

            <label for="checkOutDate">Check-out Date</label>
            @Html.TextBoxFor(model => model.checkOutDate, new { @class = "form-control", type = "date", placeholder = "Select check-out date", required = "required" })

            <label for="email">Email</label>
            @Html.TextBoxFor(model => model.email, new { @class = "form-control", placeholder = "Enter email", required = "required" })

            <button type="submit">Submit</button>
        </form>
    }


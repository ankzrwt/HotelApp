@{
    // Retrieve reservations from ViewBag
    List<HotelManagement.Models.Reservation> reservations = ViewBag.reservation;
}


<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    h2 {
        color: #333;
        text-align: center;
    }

    table {
        width: 80%;
        margin: 20px auto;
        border-collapse: collapse;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    th, td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
        white-space: nowrap;
    }

    th {
        background-color: #4CAF50;
        color: white;
    }

    tbody tr:hover {
        background-color: #f5f5f5;
    }

    button {
        padding: 8px 12px;
        background-color: #4CAF50;
        color: white;
        border: none;
        cursor: pointer;
        border-radius: 4px;
    }

        button:hover {
            background-color: #45a049;
        }
</style>


    <h2>Reservation List</h2>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Guest Name</th>
                <th>Check-In Date</th>
                <th>Check-Out Date</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in reservations)
            {
                <tr>
                    <td>@reservation.id</td>
                    <td>@reservation.guestName</td>
                    <td>@reservation.checkInDate.ToShortDateString()</td>
                    <td>@reservation.checkOutDate.ToShortDateString()</td>
                    <td>@reservation.email</td>
                    <td>
                        <button>
                            @Html.ActionLink("Delete", "DeleteReservation", "Reservation", new { id = reservation.id })
                        </button>
                        <button>
                            @Html.ActionLink("View", "ViewReservation", "Reservation", new { id = reservation.id })
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>


